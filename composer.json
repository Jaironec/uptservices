{
    "name": "uptservices/website",
    "description": "Sitio web de UPT Services",
    "type": "project",
    "license": "MIT",
    "version": "2.0.0",
    "authors": [
        {
            "name": "UPT Services",
            "email": "16cardenas16@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "UptServices\\": "src/api/",
            "UPTServices\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src/api/",
        "fix": "phpcbf src/api/",
        "install-production": [
            "composer install --no-dev --optimize-autoloader"
        ],
        "post-install-cmd": [
            "chmod +x scripts/*.sh"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
